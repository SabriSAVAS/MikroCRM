    <![endif]-->
    <style>
        body {
            font-size: 12px;
        }
    </style>
</head>
<body onload="window.print();" style="height:100%">
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice" style="height:450px">
            <!-- title row -->
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="page-header">
                        @*<i class="fa fa-globe"></i>*@
                        @* <img class="img-responsive" style="opacity: 0.5; filter: alpha(opacity=50)" width="100" height="100" src="~/Content/images/sarkom logo.png" />*@
                        <span>Sarkom Bilgisayar Oto.Ilet.San.Tic.Ltd.Sti. </span>
                        <small>Karliktepe Mah Yakacik Cad No:39/D - Tel: (216) 387-1576 - e-mail: teknik@sarkom.com.tr <span class="pull-right">Siparis No: @Model.EvrakNo<br></span></small>


                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">

                    <address>
                        <strong>@Model.MusteriAd</strong><br>
                        @Model.Adres <br />
                        @Model.il / @Model.ilce<br />
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">

                    <address>


                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">

                    <br>

                    <b>Tarih :</b>@string.Format("{0:dd MMMM yyyy}", Convert.ToDateTime(Model.Tarih))<br>
                    <b>Bas-Bit Saat  :</b>@Model.BasBitSaat<br>
                    <b>Saat :</b>@Model.Saat<br>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Hizmet</th>
                                <th>Açıklama</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PrintList != null)
                            {
                                if (Model.PrintList.Count > 0)
                                {
                                    foreach (var item in Model.PrintList)
                                    {
                                        if (item.HizmetTip == "Hizmet")
                                        {
                                            <tr>
                                                <td style="width:200px">@item.HizmetKod - @item.HizmetAd</td>
                                                <td>@Html.Raw(item.Aciklama)</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="2">@item.HizmetAd</td>
                                            </tr>
                                        }

                                    }
                                }
                            }


                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->

            <div class="row">
                <!-- accepted payments column -->
                <div class="col-xs-6">
                    <h4><b>Servis Sonrasi</b></h4>

                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <td style="width:50%">Tek Adı Soyadı :</td>
                                <td style="width:50%"></td>
                            </tr>
                            <tr>
                                <td style="width:50%">Müşteri Adı Soyadı :</td>
                                <td style="width:50%"></td>
                            </tr>

                        </table>
                    </div>


                </div>
                <!-- /.col -->
                <div class="col-xs-6">

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->

