@model MikroCrm.UI.ViewModel.LoginModel.LoginViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="tr" class="body-full-height">
<head>
    <!-- META SECTION -->
    <title>Mikro Crm Portal</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <!-- END META SECTION -->
    <!-- CSS INCLUDE -->
    <link href="~/Content/theme-default.css" rel="stylesheet" />

    <!-- EOF CSS INCLUDE -->
</head>
<body>

    <div class="login-container">

        <div class="login-box animated fadeInDown">
            <div class="login-logo"></div>
            <div class="login-body">
                <div class="login-title"><strong>Hoşgeldiniz</strong>, Lütfen giriş yapınız...</div>
                @using (Html.BeginForm())
                {
                    <span class="help-block">@Html.ValidationSummary()</span>
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.TextBoxFor(x=>x.Email,new { @class="form-control", @placeholder="Email" })
                            <span class="help-block">@Html.ValidationMessageFor(x => x.Email)</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.Password, new { type="password",@class = "form-control", @placeholder = "Şifre" })
                            <span class="help-block">@Html.ValidationMessageFor(x => x.Password)</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                           @* <a href="#" class="btn btn-link btn-block">Şifremi unuttum.</a>*@
                            <span class="btn btn-block">@Model.Ip</span>
                        </div>
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-info btn-block">Giriş yap</button>
                        </div>
                    </div>
                }
                
                  
             
            </div>
          
        </div>

    </div>

</body>
</html>






